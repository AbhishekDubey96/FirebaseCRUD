<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:backgroundTint="#394561"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imvHotel"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/hotel"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/tvHotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tejas Hotel"
                android:layout_toRightOf="@+id/imvHotel"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_17sdp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"/>

<!--            <ImageView-->
<!--                android:id="@+id/imvEdit"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/ic_edit"-->
<!--                android:layout_gravity="end"-->
<!--                android:layout_toRightOf="@+id/tvHotelName"-->
<!--                -->
<!--                android:layout_marginTop="@dimen/_12sdp"/>-->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/rl_one">

            <TextView
                android:id="@+id/tvHotelPhNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8108377993"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_70sdp"/>

            <TextView
                android:id="@+id/tvHotelID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvHotelPhNo"
                android:text="tejas@gmail.com"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@+id/rl_two"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvHotelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kalyan, Thane"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_70sdp"/>


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@+id/rl_three"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"
                    android:layout_marginLeft="@dimen/_70sdp"/>

                <TextView
                    android:layout_toRightOf="@+id/star"
                    android:id="@+id/tvHotelRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_80sdp"/>


                <ImageView
                    android:id="@+id/imvDelete"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/ic_delete"
                    android:layout_toRightOf="@+id/tvHotelRating"/>

              <ImageView
                  android:id="@+id/imvEdit"
                  android:layout_width="@dimen/_35sdp"
                  android:layout_height="@dimen/_35sdp"
                  android:src="@drawable/ic_edit"
                  android:layout_toRightOf="@+id/imvDelete"
                  android:layout_marginLeft="@dimen/_10sdp"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>